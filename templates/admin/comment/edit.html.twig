{% extends "admin/base.html.twig" %}

{% block title %}Modification du commentaire {{ comment.id}}{% endblock %}

{% block body %}

   <div class="container">
      <h1 class="mt-5">Modification du commenatire {{comment.id}}</h1>

      <div class="alert alert-info">
         <strong>Annonce liée : </strong> {{comment.ad.title}} <br>
         <strong>Auteur : </strong> {{comment.author.fullName}} <br>
         <strong>Date de création : </strong> {{comment.createdAt|date('d/m/Y H:i')}} <br>
         <strong>Note donnée : </strong> {{comment.rating}}

      </div>

      {{ form_start(form) }}

      {{ form_widget(form)}}

      <button type="submit" class="btn btn-primary">Modifier le commentaire</button>

      {{ form_end(form) }}      
   </div>
{% endblock %}