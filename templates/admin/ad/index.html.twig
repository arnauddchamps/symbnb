{% extends 'admin/base.html.twig' %}

{% block title %}Administration!{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1 class="my-5">Gestion des annonces</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">RÃ©servations</th>
                <th class="text-center">Note</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for ad in ads %}
            <tr>
                <td>{{ad.id}}</td>
                <td>{{ad.title}}</td>
                <td><img src="{{ad.author.picture}}" alt="" class="avatar avatar-micro mr-2">{{ad.author.fullname}}</td>
                <td class="text-center">{{ad.bookings|length}}</td>
                <td class="text-center">{{ad.avgRatings}}</td>
                <td>
                    <a href="{{path('admin_ads_edit', {"id" : ad.id})}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="{{path('admin_ads_delete', {"id": ad.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>

            </tr> 
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
